source 'https://rubygems.org'

ruby '3.0.3'

# Основний гем для Sinatra
gem 'sinatra', '~> 4.1'

# Веб-сервер Puma для роботи в production
gem 'puma', '~> 6.0'

# Гем для забезпечення кодування JSON (якщо знадобиться)
gem 'json', '~> 2.6'

# Гем для зручного журналювання (опціонально)
gem 'logger', '~> 1.5'

group :development do
  # Гем для автоматичного перезапуску сервера при зміні файлів
  gem 'shotgun', '~> 0.9'
end
